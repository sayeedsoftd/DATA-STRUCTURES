package MyJavaProject.datastructure;

import java.util.Scanner;

public class ReverseString {

    public static void main(String[] args) {

        Scanner sc =new Scanner(System.in);
        String s=sc.next();
        StringBuilder stringBuilder=new StringBuilder(); // create a object in StringBuilder
        stringBuilder.append(s);  // import a String in stringBuilder(object)
        stringBuilder.reverse();  //reverse a string
        System.out.println(stringBuilder);
    }
}



