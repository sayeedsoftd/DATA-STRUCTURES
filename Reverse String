 public static void main(String[] args) {
        int i;
        Scanner sc =new Scanner(System.in);
        String s=sc.next();
        char[] result=s.toCharArray();      // convert String to character array
        for ( i=result.length-1;i>=0;i--)   //iteration
        {
                                            // print reversed String
             System.out.print(result[i]);
        }

    }
